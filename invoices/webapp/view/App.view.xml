<mvc:View controllerName="logaligroupa21.sapui5.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">

    <Shell >
        <App>
            <pages>
                <Page title="{i18n>appTitle}">
                    <headerContent>
                         <Button id="helloDialogHeader" 
                                    icon="sap-icon://action"  
                                    type="Emphasized" 
                                    press=".onOpenDialogHeader" 
                                    class="sapuISmallMarginEnd"/> 
                      </headerContent>
                    <content>
                        <mvc:XMLView viewName="logaligroupa21.sapui5.view.HelloPanel"/>
                        <mvc:XMLView viewName="logaligroupa21.sapui5.view.InvoicesList"/>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
