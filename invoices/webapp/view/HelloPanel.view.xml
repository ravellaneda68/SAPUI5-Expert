<mvc:View controllerName="logaligroupa21.sapui5.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">

                        <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
                            <content>
                                <Button id="helloDialogButton" 
                                        icon="sap-icon://action"  
                                        text="{i18n>helloDialogBut}" 
                                        type="Emphasized" 
                                        press=".onOpenDialog" 
                                        class="sapuISmallMarginEnd"/> 

                                <Button text="{i18n>showhelloButtonText}" 
                                        type="Emphasized"
                                         press=".onShowHello" 
                                         class="sapUiSmallMarginBegin sapUiSmallMarginEnd"/>

                                    <Input value="{/recipient/name}" 
                                        valueLiveUpdate="true"
                                        textAlign="Center" 
                                        width="60%"/>
                                            <Text text="Hello {/recipient/name}" 
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTop boldElements sapThemeHighlight-asColor" />
                            </content>
                        </Panel>
                            <core:Fragment fragmentName="logaligroupa21.sapui5.view.Form01"  type="XML"/>
</mvc:View>
 